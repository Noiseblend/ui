@import fonts
@import variables
@import animations
@import mixins

body, input, button, optgroup, select, textarea, .font-sans
    -moz-osx-font-smoothing auto
    -webkit-font-smoothing auto
    font-family: Mukta, sansSerif !important

h1, h2, h3, h4, h5, h6, th, .font-heading
    font-family: Futura, sansSerif !important


button.disabled
    cursor auto !important

button
    font-weight 500
    transition all 0.2s easeOutCubic
    outline none

    &:hover
    &:focus
    &:active
        outline none !important

a
    text-decoration none
    &:hover
    &:focus
        text-decoration none

.fw-500
    font-weight 500

.layout-container
    margin 0
    padding 0

.h-100vh
    height 100vh !important

.w-100vw
    width 100vw !important

.h-50vh
    height 50vh !important

.w-50vw
    width 50vw !important

@keyframes spin
    from
        transform rotate(0deg)
    to
        transform rotate(360deg)

.spin-alternate-fast
    animation spin 1.5s cubic-bezier(0, 0.4, 0, 0.89) alternate infinite

.spin-fast
    animation spin 1s linear infinite

.spin
    animation spin 1.5s linear infinite

:root
    --ease-in-quad cubic-bezier(0.55, 0.085, 0.68, 0.53)
    --ease-in-cubic cubic-bezier(0.55, 0.055, 0.675, 0.19)
    --ease-in-quart cubic-bezier(0.895, 0.03, 0.685, 0.22)
    --ease-in-quint cubic-bezier(0.755, 0.05, 0.855, 0.06)
    --ease-in-expo cubic-bezier(0.95, 0.05, 0.795, 0.035)
    --ease-in-circ cubic-bezier(0.6, 0.04, 0.98, 0.335)
    --ease-out-quad cubic-bezier(0.25, 0.46, 0.45, 0.94)
    --ease-out-cubic cubic-bezier(0.215, 0.61, 0.355, 1)
    --ease-out-quart cubic-bezier(0.165, 0.84, 0.44, 1)
    --ease-out-quint cubic-bezier(0.23, 1, 0.32, 1)
    --ease-out-expo cubic-bezier(0.19, 1, 0.22, 1)
    --ease-out-circ cubic-bezier(0.075, 0.82, 0.165, 1)
    --ease-in-out-quad cubic-bezier(0.455, 0.03, 0.515, 0.955)
    --ease-in-out-cubic cubic-bezier(0.645, 0.045, 0.355, 1)
    --ease-in-out-quart cubic-bezier(0.77, 0, 0.175, 1)
    --ease-in-out-quint cubic-bezier(0.86, 0, 0.07, 1)
    --ease-in-out-expo cubic-bezier(1, 0, 0, 1)
    --ease-in-out-circ cubic-bezier(0.785, 0.135, 0.15, 0.86)

.fill-window
    min-height 100vh
    min-width 100vw

.fill-window-exact
    min-height 100vh
    min-width 100vw
    max-height 100vh
    max-width 100vw
    height 100vh
    width 100vw

.fill-width
    min-width 100vw

.fill-height
    min-height 100vh

.fill-width-exact
    min-width 100vw
    max-width 100vw
    width 100vw

.fill-height-exact
    min-height 100vh
    max-height 100vh
    height 100vh

.flex-center
    display: flex
    justify-content: center
    align-items: center

.flex-column-center
    display: flex
    flex-direction column
    justify-content: center
    align-items: center

.no-anim
    animation: none
